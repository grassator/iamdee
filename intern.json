{
  "suites": ["test/api.js"],
  "coverage": false,
  "environments": [
    {
      "browserName": "chrome",
      "chromeOptions": {
        "args": [ "headless", "disable-gpu" ]
      },
      "fixSessionCapabilities": false
    }
  ],
  "configs": {
    "ci": {
      "browser": {
        "plugins": ["dist/index.js"]
      }
    },
    "browserstack": {
      "tunnel": "browserstack",
      "environments": [
        { "browserName": "chrome" },
        { "browserName": "firefox" },
        { "browserName": "safari" },
        { "browserName": "edge" },
        { "browserName": "ie", "version": 11 },
        { "browserName": "ie", "version": 10 }
      ],
      "browser": {
        "plugins": ["dist/index.js"]
      }
    },
    "requirejs": {
      "browser": {
        "plugins": ["node_modules/requirejs/require.js"]
      }
    }
  }
}
